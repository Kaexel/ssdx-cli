{
  "name": "ssdx-cli",
  "version": "0.3.0-dev",
  "description": "A template for creating npm packages using TypeScript and VSCode",
  "exports": "./build/index.js",
  "typings": "./build/index.d.ts",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "bin": "tsx ./src/index.ts",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sopra-steria-salesforce/ssdx-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "sopra-steria-salesforce",
    "url": "https://github.com/sopra-steria-salesforce"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "salesforce",
    "salesforce-dx",
    "ci-cd"
  ],
  "bugs": {
    "url": "https://github.com/sopra-steria-salesforce/ssdx-cli/issues"
  },
  "homepage": "https://github.com/sopra-steria-salesforce/ssdx-cli#readme",
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@sindresorhus/tsconfig": "^5.0.0",
    "@tsconfig/node16": "^16.1.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "semantic-release": "^22.0.5",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@flxbl-io/sfp": "^38.4.1",
    "@inquirer/prompts": "^5.0.4",
    "@inquirer/select": "^2.3.4",
    "@salesforce/cli": "^2.42.6",
    "@salesforce/core": "^7.3.9",
    "@salesforce/kit": "^3.1.2",
    "colors": "^1.4.0",
    "commander": "^12.1.0",
    "make-dir": "^5.0.0",
    "node-notifier": "^10.0.1",
    "ora": "8.0.1",
    "pad": "^3.2.0",
    "promisify-child-process": "^4.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
