{
  "name": "ssdx-cli",
  "version": "1.0.0-beta1",
  "description": "A template for creating npm packages using TypeScript and VSCode",
  "exports": "./build/index.js",
  "typings": "./build/index.d.ts",
  "main": "index.js",
  "type": "module",
  "bin": {
    "ssdx": "build/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:publish": "npm run build && npm publish",
    "bin": "tsx ./src/index.ts",
    "bin:js": "npm run build && node ./build/index.js",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "dependencies:update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sopra-steria-salesforce/ssdx-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "sopra-steria-salesforce",
    "url": "https://github.com/sopra-steria-salesforce"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "salesforce",
    "salesforce-dx",
    "ci-cd"
  ],
  "bugs": {
    "url": "https://github.com/sopra-steria-salesforce/ssdx-cli/issues"
  },
  "homepage": "https://github.com/sopra-steria-salesforce/ssdx-cli#readme",
  "dependencies": {
    "@flxbl-io/sfp": "^39.6.0",
    "@inquirer/prompts": "^7.5.3",
    "@inquirer/select": "^4.2.3",
    "@salesforce/core": "^8.12.0",
    "@salesforce/kit": "^3.2.3",
    "colors": "^1.4.0",
    "commander": "^14.0.0",
    "make-dir": "^5.0.0",
    "node-notifier": "^10.0.1",
    "ora": "8.2.0",
    "pad": "^3.3.0",
    "pino": "^9.7.0",
    "promisify-child-process": "^4.1.2"
  },
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@sindresorhus/tsconfig": "^7.0.0",
    "@tsconfig/node16": "^16.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.3.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
