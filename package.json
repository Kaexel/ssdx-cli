{
  "name": "ssdx-cli",
  "description": "A template for creating npm packages using TypeScript and VSCode",
  "version": "1.5.1",
  "exports": "./build/index.js",
  "typings": "./build/index.d.ts",
  "main": "index.js",
  "type": "module",
  "bin": {
    "ssdx": "build/index.js"
  },
  "scripts": {
    "build": "tsx scripts/set-version.ts && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:publish": "npm run build && npm publish",
    "bin": "tsx ./src/index.ts",
    "bin:js": "npm run build && node ./build/index.js",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky",
    "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
    "semantic-release": "semantic-release",
    "typecheck": "tsc --noEmit",
    "dependencies:update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sopra-steria-salesforce/ssdx-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "sopra-steria-salesforce",
    "url": "https://github.com/sopra-steria-salesforce"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "salesforce",
    "salesforce-dx",
    "ci-cd"
  ],
  "bugs": {
    "url": "https://github.com/sopra-steria-salesforce/ssdx-cli/issues"
  },
  "homepage": "https://github.com/sopra-steria-salesforce/ssdx-cli#readme",
  "dependencies": {
    "@flxbl-io/sfp": "^39.6.0",
    "@inquirer/prompts": "^7.5.3",
    "@inquirer/select": "^4.2.3",
    "@salesforce/core": "^8.12.0",
    "@salesforce/kit": "^3.2.3",
    "colors": "^1.4.0",
    "commander": "^14.0.0",
    "make-dir": "^5.0.0",
    "node-notifier": "^10.0.1",
    "ora": "8.2.0",
    "pad": "^3.3.0",
    "pino": "^9.7.0",
    "promisify-child-process": "^4.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@semantic-release/exec": "^7.1.0",
    "@sindresorhus/tsconfig": "^7.0.0",
    "@types/node": "^22.15.29",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "branch-name-lint": "^3.0.1",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix --ignore-pattern eslint.config.ts"
  }
}
